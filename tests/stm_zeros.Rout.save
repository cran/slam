> as.simple_triplet_matrix_zeros <-
+ function(x) {
+     x <- list(
+         i        = rep(seq_len(nrow(x)), ncol(x)),
+         j        = rep(seq_len(ncol(x)), each = nrow(x)),
+         v        = c(x),
+         nrow     = nrow(x),
+         ncol     = ncol(x),
+         dimnames = dimnames(x)
+     )
+     class(x) <-  "simple_triplet_matrix"
+     x
+ }
